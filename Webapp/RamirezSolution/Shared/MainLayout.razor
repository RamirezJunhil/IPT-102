<style>
    .bottom-right {
        position: fixed;
        bottom: 10px;
        right: 10px;
        z-index: 1000;
    }
</style>

<div class="bottom-right">
    <button id="muteButton" onclick="toggleMute()">Mute</button>
</div>

<script>
    var videoElement = document.getElementById('backgroundVideo');
    var muteButton = document.getElementById('muteButton');

    function toggleMute() {
        if (videoElement.src.includes('mute=0')) {
            videoElement.src = videoElement.src.replace('mute=0', 'mute=1');
            muteButton.innerText = "Unmute";
        } else {
            videoElement.src = videoElement.src.replace('mute=1', 'mute=0');
            muteButton.innerText = "Mute";
        }
    }
</script>
