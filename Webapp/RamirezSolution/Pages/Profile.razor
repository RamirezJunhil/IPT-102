@page "/Profile"

<h3>PROFILE</h3>

<div class="profile-container">
    <div class="profile-details">
        <h4>@Name</h4>
        <p><strong>Location:</strong> @Location</p>
        <p><strong>Interests:</strong> @string.Join(", ", Interests)</p>
        <q><strong>About Me:</strong> @AboutMe</q>
    </div>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRJ-fn3u_WEfqeWu7mKmmrJeFQfiRoTxAjHDQ&s" alt="Profile Picture" class="profile-picture" />
</div>

@code {
    private string Name = "JUNHIL RAMIREZ";
    private string Location = "Barangiran, Alamada Cotabato";
    private List<string> Interests = new List<string> { "Programming", "Software Development", "Database Design", "Networking Concepts" };
    private string AboutMe = "Hello! My name is DJ, and I am passionate about information technology. With a strong foundation in programming, database management, and networking concepts, I thrive on the challenges and opportunities that the tech world presents. My journey in IT began with a fascination for how technology can solve real-world problems and enhance everyday life.";
}

<style>

    h3 {
        font-size: 500%;
        font-style: initial;
        color: black;
        background-color: white;
        text-align: center; /* Centers the text within its container */
        margin: 0 auto; /* Centers the element itself if it has a width */
        width: fit-content; /* Optional: adjusts width to fit the content, so it centers within a parent container */
    }

    .profile-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .profile-details {
        flex: 1;
        margin-right: 20px;
    }

    .profile-picture {
        width: 150px;
        height: auto;
        border-radius: 50%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    h4 {
        font-size: 100%;
        font-style: initial;
        color: black;
        background-color: white;
        text-align: center; /* Centers the text within its container */
        margin: 0 auto; /* Centers the element itself if it has a width */
        width: fit-content;
    }

    q {
        display: block;
        margin-top: 10px;
        font-style: initial;
        color: black;
    }
</style>


